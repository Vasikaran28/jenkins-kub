pipeline {
    agent any
    environment {
        DOCKER_USERNAME = 'jenkinsContainer7' // Replace with your ACR username
        DOCKER_PASSWORD = credentials('ACR_Credentials	') // Jenkins credentials ID storing ACR password
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test Docker') {
            steps {
                script {
                    sh 'docker --version'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t jenkinscontainer7.azurecr.io/python-app:v1 .'
                }
            }
        }

        stage('Push to ACR') {
            steps {
                script {
                    // Login to ACR using non-interactive method
                    sh 'echo $DOCKER_PASSWORD | docker login jenkinscontainer7.azurecr.io -u $DOCKER_USERNAME --password-stdin'
                    // Push Docker image to ACR
                    sh 'docker push jenkinscontainer7.azurecr.io/python-app:v1'
                }
            }
        }

        stage('Deploy to AKS') {
            steps {
                script {
                    // You can add your AKS deployment steps here
                    echo 'Deploying to AKS...'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
