pipeline {
    agent any
    environment {
        ACR_LOGIN = credentials('acr-credentials-id') // Use your Jenkins credentials ID
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test Docker') {
            steps {
                script {
                    sh 'docker --version'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t jenkinscontainer7.azurecr.io/python-app:v1 .'
                }
            }
        }

        stage('Login to ACR') {
            steps {
                script {
                    // Use the credentials stored in Jenkins to log in to ACR
                    sh 'echo $ACR_LOGIN_PSW | docker login jenkinscontainer7.azurecr.io -u $ACR_LOGIN_USR --password-stdin'
                }
            }
        }

        stage('Push to ACR') {
            steps {
                script {
                    // Push Docker image to ACR
                    sh 'docker push jenkinscontainer7.azurecr.io/python-app:v1'
                }
            }
        }

        stage('Deploy to AKS') {
            steps {
                script {
                    echo 'Deploying to AKS...'
                    // Add your AKS deployment steps here
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
